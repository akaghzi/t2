<h1 class="page-header">Customers</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Owner</th>
      <th>Store</th>
      <th>City</th>
      <th>Phone</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.owner.titleize, customer %></td>
        <td><%= link_to customer.store.titleize, customer %></td>
        <td><%= customer.city.titleize %></td>
        <td><%= customer.phone %></td>
        <td><%= link_to 'Detail', customer_path(customer), class: "btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-warning btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Customer', new_customer_path, class: "btn btn-default" %>
