<h1 class="page-header">Products</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Code</th>
      <th>Specification</th>
      <th>Price</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code.upcase %></td>
        <td><%= product.specification.capitalize %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path, class: "btn btn-default" %>
