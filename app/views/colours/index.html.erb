<h1 class="page-header">Colours</h1>
<div class-"form-inline" role="form">
	<%= form_tag(@colour, method: "get", ) do %>
	<div class="form-group">
		<div class="col-sm-4">
			<div class="input-group">
				<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "colour", class: "form-control" %>
				<div class="input-group-btn">
					<button class="btn btn-default" type="submit">Search</button>
				</div>
			</div>
		</div>                          
	</div>                  
	<% end %>
	<%= link_to "Add colour", new_colour_path, class: "btn btn-success" %>
</div> 

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colours.each do |colour| %>
      <tr>
        <td><%= colour.name.capitalize %></td>
        <td><%= link_to 'Edit', edit_colour_path(colour) , class: "btn btn-warning btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
	<%= link_to "Add colour", new_colour_path, class: "btn btn-success" %>
