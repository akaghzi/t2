<h1 class="page-header">Customers</h1>

<div class-"form-inline" role="form">
	<%= form_tag(@customer, method: "get", ) do %>
	<div class="form-group">
		<div class="col-sm-4">
			<div class="input-group">
				<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "store name", class: "form-control" %>
				<div class="input-group-btn">
					<button class="btn btn-default" type="submit">Search</button>
				</div>
			</div>
		</div>                          
	</div>                  
	<% end %>
	<%= link_to "Add customer", new_customer_path, class: "btn btn-success" %>
</div> 
					

<table class="table table-striped">
	<thead>
		<tr>
			<th>Owner</th>
			<th>Store</th>
			<th>City</th>
			<th>Phone</th>
			<th colspan="2"></th>
		</tr>
	</thead>

	<tbody>
		<% @customers.each do |customer| %>
		<tr>
			<td class="text-capitalize"><%= link_to customer.owner, customer %></td>
			<td class="text-capitalize"><%= link_to customer.store, customer %></td>
			<td class="text-capitalize"><%= customer.city.name %></td>
			<td><%= customer.phone %></td>
			<td><%= link_to 'Detail', customer_path(customer), class: "btn btn-primary btn-sm" %></td>
			<td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-warning btn-sm" %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<%= link_to "Add customer", new_customer_path, class: "btn btn-success" %>
