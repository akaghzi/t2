<%= form_for(@customer, html: {class: "form-horizontal"}) do |f| %>
<% if @customer.errors.any? %>
<div id="error_explanation">
	<h3><%= pluralize(@customer.errors.count, "error") %> prohibited this customer from being saved:</h3>

	<ul>
		<% @customer.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="form-group">
	<div class="control-label col-sm-2">
		<%= f.label :owner %>
	</div>
	<div class="col-sm-4">
		<%= f.text_field :owner, placeholder: "mr. good man", class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= f.label :store %><br>
	</div>
	<div class="col-sm-4">
		<%= f.text_field :store, placeholder: "abc garments", class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<div class="control-label col-sm-2">
		<%= f.label :city %><br>
	</div>
	<div class="col-sm-4">
		<%= f.collection_select(:city_id, City.all, :id, :name, {prompt: "Select city"}, class: "form-control") %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-2 control-label">
		<%= f.label :phone %><br>
	</div>
	<div class="col-sm-4">
		<%= f.text_field :phone, placeholder: "(333)555-9999", class: "form-control" %>
	</div>
</div>
<div class="form-group">
	<div class="col-sm-offset-2 col-sm-2">
		<%= f.submit "Submit", class: "btn btn-success" %>
	</div>
</div>
<% end %>