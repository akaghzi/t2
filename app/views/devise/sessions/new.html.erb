<div class="jumbotron">
	<h2>Log in</h2>

	<%= form_for(resource, as: resource_name, html: {class: "form-horizontal"}, url: session_path(resource_name)) do |f| %>
	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :email %>
		</div>
		<div class="col-sm-10">
			<%= f.email_field :email, placeholder: "email@domain.com", autofocus: true , class: "form-control"%>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-2 control-label">
			<%= f.label :password %>
		</div>
		<div class="col-sm-10">
			<%= f.password_field :password, placeholder: "password", autocomplete: "off" , class: "form-control"%>
		</div>
	</div>

	<% if devise_mapping.rememberable? -%>
	<div class="form-group">
		<div class="control-label col-sm-2">
		</div>
		<div class="col-sm-10">
			<%= f.check_box :remember_me %>
			<%= f.label :remember_me %>
		</div>
	</div>
	<% end -%>

	<div class="form-group">
		<div class="control-label">
		</div>
		<div class="col-sm-10">
			<%= f.submit "Log in", class: "btn btn-default" %>
		</div>
	</div>
	<% end %>

	<%#= render "devise/shared/links" %>
</div>
