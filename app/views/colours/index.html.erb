<p id="notice"><%= notice %></p>

<h1>Listing Colours</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @colours.each do |colour| %>
      <tr>
        <td><%= colour.name.capitalize %></td>
        <td><%= link_to 'Edit', edit_colour_path(colour) , class: "btn btn-primary btn-sm"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Colour', new_colour_path, class: "btn btn-default" %>
