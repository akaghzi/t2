<h1 class="page-header">Products</h1>
<div class-"form-inline" role="form">
	<%= form_tag(@product, method: "get", ) do %>
	<div class="form-group">
		<div class="col-sm-4">
			<div class="input-group">
				<%= text_field_tag :search, params[:search], autofocus: true, placeholder: "product code", class: "form-control" %>
				<div class="input-group-btn">
					<button class="btn btn-default" type="submit">Search</button>
				</div>
			</div>
		</div>                          
	</div>                  
	<% end %>
	<%= link_to "Add product", new_product_path, class: "btn btn-success" %>
</div> 

<table class="table table-striped">
  <thead>
    <tr>
      <th>Code</th>
      <th>Specification</th>
      <th>Price</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="text-uppercase"><%= product.code %></td>
        <td class="text-capitalize"><%= product.specification %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Edit', edit_product_path(product), class: "btn btn-warning btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
	<%= link_to "Add product", new_product_path, class: "btn btn-success" %>
